{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "published": {
      "type": "boolean",
      "required": true,
      "default": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "main_media": {
      "type": "dynamiczone",
      "components": [
        "projects.video",
        "projects.image",
        "projects.animation"
      ],
      "required": true,
      "max": 1,
      "min": 1,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "brief": {
      "type": "text",
      "maxLength": 158,
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "projects.animation-content",
        "projects.image-content",
        "projects.text-content",
        "projects.video-content"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "tags": {
      "type": "component",
      "repeatable": false,
      "component": "projects.tags",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "preview": {
      "type": "component",
      "repeatable": false,
      "component": "projects.preview",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "layout": {
      "type": "component",
      "repeatable": false,
      "component": "projects.layout",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "position": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "color_scheme": {
      "type": "component",
      "repeatable": false,
      "component": "projects.color-scheme",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
