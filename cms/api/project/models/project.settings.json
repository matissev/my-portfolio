{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title_fr": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "published": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "description_fr": {
      "type": "richtext",
      "required": false
    },
    "main_media": {
      "type": "dynamiczone",
      "components": [
        "projects.video",
        "projects.image",
        "projects.animation"
      ],
      "required": true,
      "max": 1,
      "min": 1
    },
    "description_en": {
      "type": "richtext",
      "required": false
    },
    "title_en": {
      "type": "string",
      "required": true
    },
    "brief_fr": {
      "type": "text",
      "maxLength": 158,
      "required": true
    },
    "brief_en": {
      "type": "text",
      "maxLength": 158,
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "projects.animation",
        "projects.image",
        "projects.video",
        "projects.text"
      ]
    },
    "tags": {
      "type": "component",
      "repeatable": false,
      "component": "projects.tags"
    },
    "preview": {
      "type": "component",
      "repeatable": false,
      "component": "projects.preview",
      "required": true
    },
    "layout": {
      "type": "component",
      "repeatable": false,
      "component": "projects.layout"
    },
    "position": {
      "type": "integer"
    }
  }
}
