{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title_fr": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "published": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "main_media": {
      "type": "dynamiczone",
      "components": [
        "projects.video",
        "projects.image",
        "projects.animation",
        "projects.lottie"
      ],
      "required": true,
      "max": 1,
      "min": 1
    },
    "title_en": {
      "type": "string",
      "required": true
    },
    "brief_fr": {
      "type": "text",
      "required": false
    },
    "brief_en": {
      "type": "text",
      "required": false
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "projects.animation-content",
        "projects.image-content",
        "projects.text-content",
        "projects.video-content",
        "projects.gallery-content",
        "projects.reel-content",
        "projects.audio-content",
        "projects.lottie-content",
        "projects.lottiegallery-content",
        "projects.link-content"
      ]
    },
    "tags": {
      "type": "component",
      "repeatable": false,
      "component": "projects.tags"
    },
    "preview": {
      "type": "component",
      "repeatable": false,
      "component": "projects.preview",
      "required": true
    },
    "layout": {
      "type": "component",
      "repeatable": false,
      "component": "projects.layout"
    },
    "position": {
      "type": "integer"
    },
    "color_scheme": {
      "type": "component",
      "repeatable": false,
      "component": "projects.color-scheme",
      "required": false
    },
    "subtitle_en": {
      "type": "string",
      "required": true
    },
    "subtitle_fr": {
      "type": "string",
      "required": true
    },
    "description_fr": {
      "type": "text",
      "required": true,
      "maxLength": 158
    },
    "description_en": {
      "type": "text",
      "required": true,
      "maxLength": 158
    }
  }
}
